<button class="open-button" onclick="openForm()">Login</button>
<div class="login-popup" id="myForm" style="font-family:Arial, Helvetica, sans-serif; text-align:right">
  <form action="/login" method="post" class="form-container">
    <div id= "log-input">
        <label>Name:</label>
        <input id = "name" type="text" name="name" />
        <br>
        <br>
        <label>Password:</label>
        <input id = "pass" type="password" name="pass" />
    </div>
    <div>
        <input class="btn" type="submit" value="Log In"/>
    </div>        
    <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
  </form>
</div>

<button class="open-button2" onclick="openForm2()">Register</button>
<div class="register-popup" id="myForm2" style="font-family:Arial, Helvetica, sans-serif; text-align:right">
<form action="/register" method="post" class="form-container">
<div id= "reg-input">
    <label>Name:</label>
    <input id = "name" type="text" name="name" required/>
    <br>
    <br>
    <label>email:</label>
    <input id = "pass" type="email" name="email" required/>
    <br>
    <br>
    <label>Password:</label>
    <input id = "pass" type="password" name="pass" required/>

</div>
<div>
    <input class="btn" type="submit" value="Register"/>
</div>        
<button type="button" class="btn cancel" onclick="closeForm2()">Close</button>
</form>
</div>

<script>
function openForm() {
  document.getElementById("myForm").style.display = "block";
}

function closeForm() {
  document.getElementById("myForm").style.display = "none";
}

function openForm2() {
document.getElementById("myForm2").style.display = "block";
}

function closeForm2() {
document.getElementById("myForm2").style.display = "none";
}

</script>